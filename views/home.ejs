<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>HTML 5 Boilerplate</title>
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body>
    <header id="mainHeader">
      <h1 id="headerTitle">Accounts</h1>
    </header>
        <% information.forEach(account => { %>
          <div class="account">
            <h2 class="accountName"><%=account.accountName%></h3>
            <p class="username">Username: <%=account.accountUsername%></p>
            <label class="password">Password:</label>
            <input class="passwordInput" value=<%=account.accountPassword%> readonly> 
            
            
            <div class="optionContainer">
              <form class="option" action="/edit" method="post">
                <a href="/edit">
                  <button class="editButton optionButton" name="id" value=<%=account._id%>>EDIT</button>
                </a>
              </form>

              <form class="option" action="/delete" method="post">
                <button class="deleteButton optionButton" name="id" value=<%=account._id%>>DELETE</button>
              </form>  
            </div>

          </div>
      <% }); %>

      <form class="container"action="/home" method="post">
          <button id="addAccountButton">Add New Account!</button>
      </form>

    
       
  </body>
</html>